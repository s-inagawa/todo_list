<%= form_for([@user, @todo]) do |f| %>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
    <%= f.label :detail, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :detail, :class => 'text_field' %>
    </div>
    <%= f.label :end_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_at, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_todos_path, :class => 'btn' %>
  </div>
<% end -%>
